{
  "mcpServers": {
    "serena": {
      "description": "Semantic code analysis and editing toolkit",
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide",
        "--project",
        "."
      ],
      "env": {}
    },
    "context7": {
      "description": "Library documentation search server",
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@2.1.2"],
      "env": {}
    },
    "microsoftdocs-mcp": {
      "description": "Microsoft Learn documentation MCP",
      "type": "http",
      "url": "https://learn.microsoft.com/api/mcp"
    },
    "mcp-windbg": {
      "description": "WinDbg crash and dump analysis MCP",
      "type": "stdio",
      "command": "uvx",
      "args": ["--from", "git+https://github.com/svnscha/mcp-windbg@v0.12.2", "mcp-windbg"],
      "env": {}
    },
    "deepwiki": {
      "description": "DeepWiki MCP for documentation access",
      "type": "http",
      "url": "https://mcp.deepwiki.com/mcp"
    },
    "github-mcp": {
      "description": "GitHub MCP for repository operations, PRs, and issues",
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    }
  }
}
