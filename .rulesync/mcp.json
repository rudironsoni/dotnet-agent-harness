{
  "mcpServers": {
    "serena-claude-code": {
      "description": "Serena for Claude Code - per-project semantic analysis",
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "claude-code",
        "--project",
        "${PWD}"
      ],
      "env": {}
    },
    "serena-vscode": {
      "description": "Serena for VSCode - IDE integration",
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide",
        "--project",
        "${workspaceFolder}"
      ],
      "env": {}
    },
    "serena-codex": {
      "description": "Serena for Codex CLI - requires project activation",
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "codex"
      ],
      "env": {}
    },
    "serena-global": {
      "description": "Serena global config for Claude Desktop/Antigravity",
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide"
      ],
      "env": {}
    },
    "serena-jetbrains": {
      "description": "Serena for JetBrains IDEs - IDE integration",
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide",
        "--project",
        "${PWD}"
      ],
      "env": {}
    },
    "context7": {
      "description": "Library documentation search server",
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@2.1.2"],
      "env": {}
    },
    "microsoftdocs-mcp": {
      "description": "Microsoft Learn documentation MCP",
      "type": "http",
      "url": "https://learn.microsoft.com/api/mcp"
    },
    "mcp-windbg": {
      "description": "WinDbg crash and dump analysis MCP",
      "type": "stdio",
      "command": "uvx",
      "args": ["--from", "git+https://github.com/svnscha/mcp-windbg@v0.12.2", "mcp-windbg"],
      "env": {}
    }
  }
}
